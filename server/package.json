{
  "name": "server",
  "type": "module",
  "version": "1.0.0",
  "description": "Phoenix ERP api",
  "lint-staged": {
    "*.{json,js,ts}": [
      "prettier --write --ignore-unknown ."
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "start": "vite-node src/bin/index.ts",
    "lint": "eslint --fix .",
    "dev": "nodemon --exec vite-node src/bin/index.ts --ignore ./static/",
    "format": "prettier --write --ignore-unknown .",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "lint-staged": "lint-staged",
    "prep-husky": "cd .. && husky server/.husky"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "google-auth-library": "^9.14.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "node-media-server": "^2.7.0",
    "nodemon": "^3.1.7",
    "pg": "^8.12.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.7.0",
    "request-ip": "^3.3.0",
    "vite-node": "^2.0.5",
    "winston": "^3.14.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.11.8",
    "@types/redis": "^4.0.11",
    "@types/request-ip": "^0.0.41",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.12.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "redis-commander": "^0.8.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "engines": {
    "node": ">=19.9.0"
  }
}
